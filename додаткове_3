class Student:
    def __init__(self, name, surname, gender):
        self.name = name
        self.surname = surname
        self.gender = gender
    def academic_performance(self):
        request = 'Введіть оцінки учня ' + self.name + ' ' + self.surname + ' в один рядок через пробіл'
        self.performance = input(request)
        min_mark = 5
        for mark in self.performance.split():
            if int(mark) < min_mark:
                min_mark = int(mark)
        if min_mark == 5:
            if self.gender == 'м':
                print(self.name, self.surname, 'відмінник')
            else:
                print(self.name, self.surname, 'відмінниця')
        elif min_mark == 4:
            if self.gender == 'м':
                print(self.name, self.surname, 'хорошист')
            else:
                print(self.name, self.surname, 'хорошистка')
        elif min_mark == 3:
            if self.gender == 'м':
                print(self.name, self.surname, 'трійник')
            else:
                print(self.name, self.surname, 'трійниця')
        else:
            if self.gender == 'м':
                print(self.name, self.surname, 'неуспішний')
            else:
                print(self.name, self.surname, 'неуспішна')
 
num = int(input('Скільки учнів у класі?'))
students = list()
for i in range(num):
    data = input("Введіть ім'я, прізвище та стать (м/ж) учня в один рядок через прогалину").split()
    students.append(Student(data[0], data[1], data [2]))
 
for student in students:
    student.academic_performance()
